<%- include('includes/header') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="display-1 text-center">Login</h1>
            <p class="text-center lead">Acesse o sistema</p>        
            <form>
                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                    <input type="email" class="form-control" id="colFormLabel" placeholder="entre com seu e-mail">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabel" class="col-sm-2 col-form-label">Senha</label>
                    <div class="col-sm-10">
                    <input type="password" class="form-control" id="colFormLabel" placeholder="entre com a sua senha">
                    </div>
                </div>
                <div class="col-sm-3 my-1">
                    <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                    <label class="custom-control-label" for="customControlAutosizing">Lembre-me</label>
                </div>
                <div class="col-auto my-1">
                    <button type="submit" class="btn btn-primary">Acessar</button>
                </div>
            </form>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>